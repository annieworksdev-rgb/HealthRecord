{
  "expo": {
    "name": "服薬・体調記録",
    "slug": "HealthManagement",
    "version": "1.00.000",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "healthrecord",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "buildNumber": "40"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/adaptive-icon.png"
      },
      "splash": {
        "image": "./assets/images/icon.png",
        "resizeMode": "contain", // "contain"(収める) か "cover"(埋め尽くす)
        "backgroundColor": "#F2F4F7" // 画像の余白部分の色
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.t.karimata.HealthManagement",
      "permissions": [
        "com.google.android.gms.permission.AD_ID",
        "android.permission.READ_PHONE_STATE"
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/icon.png"
    },
    "plugins": [
      "expo-router",
      "./plugins/withCustomSounds",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "react-native-google-mobile-ads",
        {
          "androidAppId": "ca-app-pub-2778397933697000~2806825763",
          "iosAppId": "ca-app-pub-3940256099942544~1458002511"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "9f69b263-ee8a-4ce2-8f7f-fb514cd9c42e"
      }
    }
  }
}